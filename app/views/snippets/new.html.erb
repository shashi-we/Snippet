
<div class='container'>
  <div class='span9'>
    <%= form_for  @snippet do |f| %>

      <% if @snippet.errors.any? %>
        <h2><%= pluralize(@snippet.errors.count, "error") %> prohibited this snippet from being saved:</h2>
        <ul>
          <%  @snippet.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      <% end %>
      <div class='form-group'>
        <%= f.label 'Create your snippet' %><br />
        <%= f.text_area :description, rows: '20', cols: '120'%>
      </div>
      <div class='form-group'>
        <%= f.check_box :is_private %> <span> Private </span>
      </div>
      <div class='form-group'>
        <%= f.submit 'Submit', class: 'btn btn-default'%>
      </div>

    <% end %>
  </div>
</div>
